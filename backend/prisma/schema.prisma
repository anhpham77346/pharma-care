generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Employee {
  id           Int      @id @default(autoincrement())
  fullName     String
  birthDate    DateTime
  address      String
  phone        String   @unique
  email        String   @unique
  username     String   @unique
  passwordHash String
}

model MedicineCategory {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String?
}

model Supplier {
  id      Int    @id @default(autoincrement())
  name    String
  address String
  phone   String
  email   String?
}
